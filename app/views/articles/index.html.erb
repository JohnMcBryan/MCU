<h1><%= pluralize(@articles.size, 'Article') %></h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <strong><%= article.title %></strong> (<%= article.author %>):
      <%= article.body %>
      <%= article.created_at %>
      <%= link_to(article.title, article) %>
    </li>
  <% end %>
</ul>
<%= link_to("Add New Article", new_article_path) %>

<%= render 'footer' %>
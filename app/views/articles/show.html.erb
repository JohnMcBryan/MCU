<article>
  <header>
    <h1><%= @article.title %></h1>
  </header>
  <h2>Author</h2>
  <p>
    <%= @article.author %>
  </p>
  <h3>Date</h3>
  <p>
    <%= @article.created_at %>
  </p>
  <h3>Body</h3>
  <p>
    <%= @article.body %>
  </p>
  <%= link_to("All Articles", root_path) %>
  <%= link_to "Edit", edit_article_path(@article) %>
  <%= link_to "Delete", article_path(@article),method: :delete, data: { confirm: 'Are you sure?' } %>
</article>
<%= render 'footer' %>